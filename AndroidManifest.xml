<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tourngen.droid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TournamentListActivity"></activity>
        <activity android:name=".SignupActivity"></activity>
        <activity android:name=".TournamentActivity"></activity>
        <activity android:name=".FixtureListActivity"></activity>
        <activity android:name=".MatchListActivity"></activity>
        <activity android:name=".TeamListActivity"></activity>
        <activity android:name=".TeamActivity"></activity>
        <activity android:name=".MatchActivity"></activity>
        <activity android:name=".NewTournamentActivity"></activity>
        <activity android:name=".AddTeamsActivity"></activity>
        <activity android:name=".NewMatchesActivity"></activity>
    </application>

</manifest>
